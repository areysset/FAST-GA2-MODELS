		<aerodynamics>
			<aircraft>
				<low_speed>
					<CD0>0.04</CD0>
					<CL_alpha>4.7</CL_alpha>
					<CL0_clean>0.1</CL0_clean>
					<coef_k>0.05</coef_k>
				</low_speed>
				<takeoff>
					<CL_max>1.88</CL_max>
